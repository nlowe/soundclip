<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.BorderPane?>
<fx:root xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
         type="javafx.scene.layout.BorderPane" stylesheets="/css/controls/RecentProjectView.css" >
    <center>
        <VBox>
            <Label fx:id="projectName" />
            <Label fx:id="projectPath" />
        </VBox>
    </center>

    <right>
        <BorderPane fx:id="removeIcon" visible="false">
            <center>
                <ImageView>
                    <Image url="/img/ic_close_white_18dp_1x.png" />
                </ImageView>
            </center>
        </BorderPane>
    </right>
</fx:root>